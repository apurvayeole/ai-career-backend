# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# MongoDB connection string
# Example: mongodb://localhost:27017/career-navigator
MONGODB_URI=mongodb://localhost:27017/career-navigator
# or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/career-navigator

# AI/API Configuration
# Get your API key from: https://aistudio.google.com/app/apikeys
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Configuration
# Change this to a secure random string in production
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRE=7d

# CORS Configuration
# Allowed origins for frontend requests
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email Configuration (Optional)
# For sending emails (optional features)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=debug
